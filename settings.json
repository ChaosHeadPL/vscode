{
    //--------------------------------------------
    //------------- Workbench settings -----------
    "workbench.startupEditor": "newUntitledFile",
    "workbench.colorTheme": "Ayu Mojave",
    "workbench.iconTheme": "ayu",
    "workbench.sideBar.location": "left",
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.tree.indent": 24,
    "workbench.tree.renderIndentGuides": "always",
    "explorer.openEditors.visible": 0,
    "editor.rulers": [
        88
    ],
    "editor.minimap.enabled": false,
    "files.autoSave": "onFocusChange",
    //
    //--------------------------------------------
    //--------------- Font settings --------------
    "editor.fontSize": 13,
    "editor.fontWeight": "500",
    "editor.fontFamily": "Source Code Pro",
    "debug.console.fontSize": 13,
    "debug.console.fontFamily": "Source Code Pro",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeight": "400",
    "terminal.integrated.fontFamily": "Source Code Pro",
    //
    //--------------------------------------------
    //-------------- Python settings -------------
    // "python.pythonPath": "/usr/bin/python3",
    // "python.pythonPath": "C:\\Users\\ChaosHead\\AppData\\Local\\Programs\\Python\\Python36\\python.exe",
    "python.pythonPath": "C:\\Users\\ChaosHead\\anaconda3\\python.exe",
    "python.formatting.provider": "black",
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "editor.formatOnSave": false,
    //
    //--------------------------------------------
    //------------- Terminal settings ------------
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    //
    //--------------------------------------------
    //----------- Code runner settings -----------
    "code-runner.executorMap": {
        "python": "$pythonPath -u $fullFileName"
    },
    "code-runner.clearPreviousOutput": true,
    //
    //--------------------------------------------
    //--------------- Git settings ---------------
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "[html]": {
        "editor.defaultFormatter": "lonefy.vscode-JS-CSS-HTML-formatter"
    },
    //
    //--------------------------------------------
    //------------- SSH connections --------------
    // RaspberryPi:
    "remote.SSH.remotePlatform": {
        "192.168.0.87": "linux"
    },
    "vs-kubernetes": {
        "vs-kubernetes.helm-path.windows": "C:\\Users\\ChaosHead\\.vs-kubernetes\\tools\\helm\\windows-amd64\\helm.exe",
        "vs-kubernetes.minikube-path.windows": "C:\\Users\\ChaosHead\\.vs-kubernetes\\tools\\minikube\\windows-amd64\\minikube.exe",
        "vs-kubernetes.draft-path.windows": "C:\\Users\\ChaosHead\\.vs-kubernetes\\tools\\draft\\windows-amd64\\draft.exe"
    }
